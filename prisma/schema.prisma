datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int       @id @default(autoincrement())
  first_name    String
  last_name     String
  email         String    @unique
  password_hash String
  api_key       String    @unique
  candidates    Candidate[]
}

model Candidate {
  id        Int    @id @default(autoincrement())
  first_name String
  last_name  String
  email      String
  user_id    Int
  user       User   @relation(fields: [user_id], references: [id])
}
